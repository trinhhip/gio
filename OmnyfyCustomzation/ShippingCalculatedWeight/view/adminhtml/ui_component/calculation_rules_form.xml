<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">calculation_rules_form.calculation_rules_form_data_source</item>
            <item name="deps" xsi:type="string">calculation_rules_form.calculation_rules_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">calculation_rules_form</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="save"
                    class="OmnyfyCustomzation\ShippingCalculatedWeight\Block\Adminhtml\Rules\Edit\SaveButton"/>
            <button name="delete"
                    class="OmnyfyCustomzation\ShippingCalculatedWeight\Block\Adminhtml\Rules\Edit\DeleteButton"/>
            <button name="back"
                    class="OmnyfyCustomzation\ShippingCalculatedWeight\Block\Adminhtml\Rules\Edit\BackButton"/>
        </buttons>
    </settings>
    <dataSource name="data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">OmnyfyCustomzation\ShippingCalculatedWeight\Model\Rules\DataProvider</argument>
            <argument name="name" xsi:type="string">calculation_rules_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="calc_weight/rules/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="calculation_rules">
        <settings>
            <label/>
        </settings>
        <field name="entity_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>entity_id</dataScope>
            </settings>
        </field>
        <field name="is_active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Rule</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="priority" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Rule Priority</label>
                <dataScope>priority</dataScope>
            </settings>
        </field>
        <field name="ship_from_country" sortOrder="40" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Ship From Country</label>
                <dataScope>ship_from_country</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="OmnyfyCustomzation\ShippingCalculatedWeight\Model\Rules\Config\CountryOptions"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="ship_to_country" sortOrder="50" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Ship To Country</label>
                <dataScope>ship_to_country</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="OmnyfyCustomzation\ShippingCalculatedWeight\Model\Rules\Config\CountryOptions"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="weight_from" sortOrder="51" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Weight From</label>
                <dataScope>weight_from</dataScope>
            </settings>
        </field>
        <field name="weight_to" sortOrder="52" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Weight To</label>
                <dataScope>weight_to</dataScope>
            </settings>
        </field>
        <field name="type" sortOrder="53" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                    <item name="component" xsi:type="string">OmnyfyCustomzation_ShippingCalculatedWeight/js/form/type/options</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Calculation</label>
                <dataScope>type</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="OmnyfyCustomzation\ShippingCalculatedWeight\Model\Rules\Config\TypePrice"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="calc_formula" sortOrder="60" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                    <item name="additionalInfo" xsi:type="string">
                        <![CDATA[<span class="admin__field-note">
                        <b>{weight}: </b>is the weight variable of the product. <br>
                        <b>Eg: </b> (22.75 + ({weight} - 0.5) / 0.5 * 2.79 + {weight} * 0.1282 * 7.5) * (122 / 100)
                        </span>]]>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Calculation Formula</label>
                <dataScope>calc_formula</dataScope>
            </settings>
        </field>
        <field name="round_factor" sortOrder="70" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                    <item name="additionalInfo" xsi:type="string">
                        <![CDATA[<span class="admin__field-note">Rounding factor of weight, default is 0.5</span>]]>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Rounding Factor</label>
                <dataScope>round_factor</dataScope>
            </settings>
        </field>
        <field name="price" sortOrder="75" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Price</label>
                <dataScope>price</dataScope>
            </settings>
        </field>
        <field name="surcharge_apply" sortOrder="80" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Surcharge Apply</label>
                <dataScope>surcharge_apply</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="OmnyfyCustomzation\ShippingCalculatedWeight\Model\Rules\Config\Surcharge"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="surcharge_fee" sortOrder="90" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">calculation_rules</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Surcharge Fee</label>
                <dataScope>surcharge_fee</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
