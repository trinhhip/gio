<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="omnyfy_vendor" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
            <label>Vendor</label>
            <tab>omnyfy</tab>
            <resource>OmnyfyCustomzation_Vendor::config_omnyfycustomzation_vendor</resource>
            <group id="vendor_listing_page" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                <label>Vendor Listing Page</label>
                <field id="number_product_banner" type="text" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                    <label>Number Product Banners</label>
                    <comment><![CDATA[Number of product images displayed]]></comment>
                </field>
                <field id="banner_image"  type="image" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Banner</label>
                    <backend_model>Smartwave\Porto\Model\Config\Backend\Image\Stickylogo</backend_model>
                    <base_url type="media" scope_info="1">porto/sticky_logo</base_url>
                    <comment>Allowed file types:PNG, GIF, JPG, JPEG, SVG.</comment>
                </field>
            </group>
        </section>
    </system>
</config>