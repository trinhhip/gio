<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <block class="OmnyfyCustomzation\Vendor\Block\Vendor\Listing\Banner" name="designer.banner" template="OmnyfyCustomzation_Vendor::merchant/banner.phtml" before="main.content"/>
        </referenceContainer>
        <referenceContainer name="columns">
            <container name="designer.sidebar.container" htmlTag="div" htmlClass="sidebar sidebar-main" after="main">
                <block class="OmnyfyCustomzation\Vendor\Block\Vendor\Listing" name="designer.sidebar" template="OmnyfyCustomzation_Vendor::designer-sidebar.phtml" before="merchant.list"/>
            </container>
            <block class="OmnyfyCustomzation\Vendor\Block\Vendor\Listing\Title" name="page.main.title.designer" template="OmnyfyCustomzation_Vendor::merchant/pager/title.phtml" before="-">
                <action method="setPageTitle">
                    <argument translate="true" name="title" xsi:type="string">Our Creators</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="OmnyfyCustomzation\Vendor\Block\Vendor\Listing\Pager"
                   name="vendor.designer.toolbar"
                   template="OmnyfyCustomzation_Vendor::merchant/pager/toolbar.phtml" before="merchant.list">
            </block>
            <block class="OmnyfyCustomzation\Vendor\Block\Vendor\Listing\Pager"
                   name="vendor.designer.pagination"
                   template="OmnyfyCustomzation_Vendor::merchant/pager/pagination.phtml" after="merchant.list">
            </block>
        </referenceContainer>
        <referenceBlock name="merchant.list">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">OmnyfyCustomzation_Vendor::merchant/list.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
