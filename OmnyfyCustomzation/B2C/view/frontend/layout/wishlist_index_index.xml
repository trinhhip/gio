<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="customer.wishlist.item.actions" destination="customer.wishlist.items" before="-"/>

        <referenceBlock name="customer.wishlist.item.cart">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">OmnyfyCustomzation_B2C::wishlist/item/column/cart.phtml
                </argument>
            </action>
            <arguments>
                <argument name="retail" xsi:type="object">OmnyfyCustomzation\B2C\ViewModel\Wishlist\Retail</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="customer.wishlist.items">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">OmnyfyCustomzation_B2C::wishlist/item/list.phtml</argument>
            </action>
            <arguments>
                <argument name="viewModel" xsi:type="object">OmnyfyCustomzation\B2C\ViewModel\Wishlist</argument>
            </arguments>
            <block class="Magento\Wishlist\Block\Customer\Wishlist\Item\Column\Cart"
                   name="customer.wishlist.item.retail.price" template="OmnyfyCustomzation_B2C::wishlist/item/column/retail_price.phtml"
                   cacheable="false" after="customer.wishlist.item.name">
                <arguments>
                    <argument name="retail" xsi:type="object">OmnyfyCustomzation\B2C\ViewModel\Wishlist\Retail</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
