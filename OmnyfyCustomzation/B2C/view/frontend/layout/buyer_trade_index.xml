<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Sign Up To Trade</title>
    </head>
    <body>
        <referenceContainer name="page.wrapper">

        </referenceContainer>
        <referenceContainer name="content">
            <container name="customer_trade_banner_container" htmlTag="div" htmlClass="customer-trade-banner" before="main.content">
                <block class="Magento\Cms\Block\Block" name="banner">
                    <arguments>
                        <argument name="block_id" xsi:type="string">banner-new-account-page</argument>
                    </arguments>
                </block>
                <container name="customer_trade_banner_content" htmlTag="div" htmlClass="customer-trade-banner-content">
                    <block class="Magento\Cms\Block\Block" name="banner-content">
                        <arguments>
                            <argument name="block_id" xsi:type="string">content-banner-account-create-page</argument>
                        </arguments>
                    </block>
                    <block class="OmnyfyCustomzation\B2C\Block\Trade\Register" name="customer_trade_form_register"
                           template="OmnyfyCustomzation_B2C::form/trade/totrade.phtml" cacheable="false"/>
                </container>
            </container>
            <block class="Magento\Cms\Block\Block" name="service_content">
                <arguments>
                    <argument name="block_id" xsi:type="string">content-new-account-page</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">To The Trade</argument>
            </action>
        </referenceBlock>
    </body>
</page>
