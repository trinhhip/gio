<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.items">
            <container name="checkout.cart.relateditems" htmlTag="div" htmlClass="cart-container" after="checkout.cart.crosssell">
                <block class="OmnyfyCustomzation\Cart\Block\Cart\RelatedProducts" name="related.products.list"  template="OmnyfyCustomzation_Cart::product/relatedlist.phtml" >
                    <arguments>
                        <argument name="productListModel" xsi:type="object">OmnyfyCustomzation\PriceToQuote\ViewModel\Product\Listing</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="recently-viewed-products">
                    <arguments>
                        <argument name="block_id" xsi:type="string">recently-viewed-products</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
