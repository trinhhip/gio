<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/customer/approve/email" method="POST">
        <service class="OmnyfyCustomzation\BuyerApproval\Api\ListApproveInterface" method="approveCustomer"/>
        <resources>
            <resource ref="Magento_Customer::customer"/>
        </resources>
    </route>
    <route url="/V1/customer/not-approve/email" method="POST">
        <service class="OmnyfyCustomzation\BuyerApproval\Api\ListApproveInterface" method="notApproveCustomer"/>
        <resources>
            <resource ref="Magento_Customer::customer"/>
        </resources>
    </route>
</routes>