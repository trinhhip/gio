<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="massapprove">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to approved selected Buyers?</message>
                        <title translate="true">Approve Buyer</title>
                    </confirm>
                    <url path="buyerapproval/index/massApprove"/>
                    <type>approve</type>
                    <label translate="true">Approve Buyer</label>
                </settings>
            </action>
            <action name="massnotapprove">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to reject selected Buyers?</message>
                        <title translate="true">Reject Buyer</title>
                    </confirm>
                    <url path="buyerapproval/index/massNotApprove"/>
                    <type>notapprove</type>
                    <label translate="true">Reject Buyer</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="customer_columns">
        <column name="is_approved">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="editor" xsi:type="string">false</item>
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">OmnyfyCustomzation_BuyerApproval/js/grid/columns/approval</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Approval Status</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="number">135</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
