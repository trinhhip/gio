<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
       <section id="price_to_quote" translate="label" type="text" sortOrder="130115" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Price To Be Quoted</label>
            <tab>vermillion</tab>
            <resource>OmnyfyCustomzation_PriceToQuote::config</resource>
                <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>General Settings</label>
                    <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1"
                           showInWebsite="1" showInStore="1">
                        <label>Enable Extension</label>
                        <comment>Choose ‘Yes’ to hide the price for the selected product</comment>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="email" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Email</label>
                        <validate>required-entry validate-email</validate>
                        <comment>Email to receive request</comment>
                    </field>
                    <field id="email_sender" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Email Sender</label>
                        <validate>required-entry validate-email</validate>
                    </field>
                    <field id="label" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Label</label>
                        <validate>required-entry</validate>
                        <comment>Label to display in frontend</comment>
                    </field>
                    <field id="email_template" translate="label comment" type="select" sortOrder="50" showInDefault="1"
                           showInWebsite="1" showInStore="1">
                        <label>Email Template</label>
                        <comment>Choose email template to send to admin email</comment>
                        <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                    </field>
                </group>
       </section>
    </system>
</config>
