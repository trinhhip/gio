<script>
require([
    "jquery",
], function(jQuery){
    jQuery(document).ready(function() {
        jQuery('#bookshipment').click(function(e){
            e.preventDefault();

            jQuery.ajax({
                method: "POST",
                url: "<?= $urlBookShip; ?>",
                dataType: "json",
                data: {
                    form_key: window.FORM_KEY,
                    order_id: <?= $orderId ?>,
                    vendor_id: <?= $vendorId ?>,
                    source_stock_id: <?= $sourceStockId ?>,
                    source_code: "<?= $sourceCode ?>",
                    courier_id: "<?= $courierId ?>",
                    courier_entity_id: "<?= $courierEntityId ?>",
                },
                showLoader:true,
                success: function(response){
                    location.reload();
                },
                error: function () {
                    alert('Something went wrong. Please try again.');
                }
            });
        });

        jQuery('#generatelabel').click(function(e){
            e.preventDefault();
            var easy_shipment_id = "<?= $easyShipmentId ?>";
            if (easy_shipment_id) {
                jQuery.ajax({
                    method: "POST",
                    url: "<?= $urlGenerateLabel; ?>",
                    dataType: "json",
                    data: {
                        form_key: window.FORM_KEY,
                        source_stock_id: <?= $sourceStockId ?>,
                        source_code: "<?= $sourceCode ?>",
                        courier_id: "<?= $courierId ?>",
                        easyship_shipment_id: easy_shipment_id,
                    },
                    showLoader:true,
                    success: function(response){
                        if (response.error && response.message) {
                            alert(response.message);
                        }else{
                            location.reload();
                        }
                    },
                    error: function () {
                        alert('Something went wrong. Please try again.');
                    }
                });
            }else{
                alert('Shipment hasn\'t been created.');
            }
        });

        jQuery('#cancelshipment').click(function(e){
            e.preventDefault();
            var easy_shipment_id = "<?= $easyShipmentId ?>";
            if (easy_shipment_id) {
                jQuery.ajax({
                    method: "POST",
                    url: "<?= $urlCancelShipment; ?>",
                    dataType: "json",
                    data: {
                        form_key: window.FORM_KEY,
                        source_stock_id: <?= $sourceStockId ?>,
                        source_code: "<?= $sourceCode ?>",
                        easyship_shipment_id: easy_shipment_id,
                    },
                    showLoader:true,
                    success: function(response){
                        // console.log(response);
                        location.reload();
                    },
                    error: function () {
                        alert('Something went wrong. Please try again.');
                    }
                });
            }else{
                alert('Shipment hasn\'t been created.');
            }
        });
    });
});
</script>
