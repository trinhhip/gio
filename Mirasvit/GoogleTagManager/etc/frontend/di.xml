<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Quote\Model\Quote">
        <plugin name="Mirasvit_GoggleTagManager::addToCart" type="Mirasvit\GoogleTagManager\Plugin\PushOnCartAddPlugin"/>
        <plugin name="Mirasvit_GoggleTagManager::removeFromCart" type="Mirasvit\GoogleTagManager\Plugin\PushOnCartRemovePlugin" />
    </type>
    <type name="Magento\Wishlist\Model\Wishlist">
        <plugin name="Mirasvit_GoggleTagManager::addToWishlist" type="Mirasvit\GoogleTagManager\Plugin\PushOnWishlistAddPlugin"/>
    </type>

    <type name="Magento\Customer\CustomerData\SectionPoolInterface">
        <arguments>
            <argument name="sectionSourceMap" xsi:type="array">
                <item name="gtm" xsi:type="string">Mirasvit\GoogleTagManager\CustomerData\GtmSection</item>
            </argument>
        </arguments>
    </type>
</config>
