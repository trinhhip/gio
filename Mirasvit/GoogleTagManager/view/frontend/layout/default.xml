<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block
                    name="mst_gtm.init_noscript"
                    class="Mirasvit\GoogleTagManager\Block\GtmNoScript"
                    before="-"
            />
        </referenceContainer>

        <container name="mst_gtm.body_end" after="before.body.end">
            <block
                    name="mst_gtm.layer"
                    class="Mirasvit\GoogleTagManager\Block\Render"
                    template="Mirasvit_GoogleTagManager::events.phtml"
                    after="-"
            />
        </container>
    </body>
</page>
