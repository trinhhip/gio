        <settings>
            <label translate="true">General</label>
            <opened>true</opened>
            <dataScope>data</dataScope>
        </settings>

        <field name="name" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Name</label>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="store_id" sortOrder="20" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">1</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Store</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Store\Ui\Component\Listing\Column\Store\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="path" sortOrder="30" formElement="input">
            <settings>
                <label translate="true">Path to Sitemap File</label>
                <notice translate="true">Example: "sitemap/sitemap1.xml". Make sure path is writable and accessible through internet</notice>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="max_urls" sortOrder="40" formElement="input">
            <settings>
                <label translate="true">Max Items per File</label>
                <dataType>number</dataType>
                <notice translate="true">If exceed, index file will be created</notice>
            </settings>
        </field>

        <field name="max_file_size" sortOrder="50" formElement="input">
            <settings>
                <label translate="true">Max File Size (kB)</label>
                <dataType>number</dataType>
                <notice translate="true">If exceed, index file will be created</notice>
