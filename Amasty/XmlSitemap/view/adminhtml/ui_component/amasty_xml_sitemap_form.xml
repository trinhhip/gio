        </field>

        <field name="exclude_urls" sortOrder="60" formElement="textarea">
            <settings>
                <label translate="true">Exclude URLs</label>
                <notice translate="true">URL to exclude, one per line. Specify URL with * to exclude all similar URLs</notice>
